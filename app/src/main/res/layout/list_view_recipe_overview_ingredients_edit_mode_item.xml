<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/md_grey_200">

    <CheckBox
        android:id="@+id/checkBox_all_to_shoppingList"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/checkBox_all_available" />

    <CheckBox
        android:id="@+id/checkBox_all_available"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/shopping_list_selector"
        android:button="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgBtn_close_edit_mode" />

    <ImageButton
        android:id="@+id/imgBtn_close_edit_mode"
        style="@style/BaseNavigateImageButton"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_close_blue_48dp" />

    <TextView
        android:id="@+id/textView24"
        style="@style/TextViewElementsTextColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="All"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/checkBox_all_available"
        app:layout_constraintEnd_toStartOf="@+id/checkBox_all_available"
        app:layout_constraintTop_toTopOf="@+id/checkBox_all_available" />

    <TextView
        android:id="@+id/textView26"
        style="@style/TextViewElementsTextColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="All"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/checkBox_all_available"
        app:layout_constraintStart_toEndOf="@+id/checkBox_all_to_shoppingList"
        app:layout_constraintTop_toTopOf="@+id/checkBox_all_available" />

    <TextView
        android:id="@+id/textView27"
        style="@style/TextViewElementsTextColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:text="Close"
        android:textSize="18sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/imgBtn_close_edit_mode"
        app:layout_constraintEnd_toStartOf="@+id/imgBtn_close_edit_mode"
        app:layout_constraintTop_toTopOf="@+id/imgBtn_close_edit_mode" />
</androidx.constraintlayout.widget.ConstraintLayout>